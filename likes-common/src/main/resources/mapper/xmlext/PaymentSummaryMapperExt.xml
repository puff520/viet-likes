<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.likes.common.mybatis.mapperext.PaymentSummaryMapperExt">
    <resultMap id="BaseResultMap" type="com.likes.common.mybatis.entity.PaymentSummary">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="type_detail" property="typeDetail" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="real_amount" property="realAmount" jdbcType="DECIMAL"/>
    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        SELECT id,order_no,real_amount,user_id,type_detail FROM `payment_summary`
        <if test="ids != null">
            where id IN
            <foreach collection="ids" item="id" separator="," open="(" close=")">
                #{id,jdbcType=INTEGER}
            </foreach>
        </if>
    </select>

    <select id="statisticsAllWay" resultType="java.util.HashMap">
        select
        sum(real_amount) as money
        ,way as type
        from payment_summary where
        1=1
        <if test="null != status ">
            and status = #{status,jdbcType=INTEGER}
        </if>
        <if test="null != startTime ">
            and create_time <![CDATA[ >=  ]]> #{startTime,jdbcType=VARCHAR}
        </if>
        <if test="null != endTime ">
            and create_time <![CDATA[ <=  ]]> #{endTime,jdbcType=VARCHAR}
        </if>
        GROUP BY type;
    </select>

    <select id="statRechargeAccount" resultType="com.likes.common.model.dto.RechargeStatDTO">
        select count(1) as rechargeAccount
        from payment_summary
        where user_id=#{userId} and status = 1 and way in(1,3)
    </select>

    <select id="statRechargeSum" resultType="com.likes.common.model.dto.RechargeStatDTO">
        select sum(real_amount) as rechargeAmount, count(1) as rechargeAccount
        from payment_summary
        where user_id = #{userId} and status = 1 and way in(1,3)
    </select>

    <select id="statOnlinePayInfo" resultType="com.likes.common.model.dto.RechargeStatDTO">
        select sum(ordAmt) as rechargeAmount, count(1) as rechargeAccount
        from payment_result_jetpay
        where user_id = #{userId} and status = 1
    </select>


    <select id="sumRechargeForMemberId" parameterType="map" resultType="java.lang.Double" >
        <!--
          WARNING - @mbggenerated
          This element is automatically generated by MyBatis Generator, do not modify.
        -->
        select sum(amount) from payment_summary where
        user_id=#{memberId}
        and status=1
        <if test="startTime != null">
            and create_time <![CDATA[>=]]> #{startTime}
        </if>
        <if test="endTime != null">
            and create_time <![CDATA[<= ]]> #{endTime}
        </if>

    </select>
</mapper>